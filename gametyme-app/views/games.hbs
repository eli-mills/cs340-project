<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GameTyme</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <header>
        <h1 id="logo"> <a href="/"> <i class="fa-solid fa-dragon" id="logo-icon"></i> GameTyme</a> </h1>
        <div id="navbar">
            <ul>
                 <li> <a href="/games"> Games </a></li>
                <li> <a href="/genres"> Genres </a></li>
                <li> <a href="/companies"> Companies </a></li>
                <li> <a href="/platforms"> Platforms </a></li>
                <li> <a href="/locations"> Locations </a></li>
                <li> <a href="/playthroughs"> Playthroughs </a></li>
                <li> <a href="/users"> Users </a></li>
            </ul>
        </div>    
    </header>
    <br>
    <h3 id="title">Games</h3>
    <br>
    <div id="searchGamesContainer">
        <input type="text" placeholder="Search Games..." id="searchGames">
        <div id="games-filter">
            <label for="filter-game" id="filter-title"> Filter By:</label>
            <select name="game-filter" id="game-filter">
                <option value=""> Select</option>
                <option value="Genre">Genre</option>
                <option value="Company">Company</option>
                <option value="Platform">Platform</option>
                <option value="Other">Other</option>
              </select>
        </div>
        <button id="addnewGameBtns" onclick="addGame()">Add New Game</button>
    </div>
    <br>
   
    <div id="games">
        <br>
        <table>
            <tr>
                <th>Game ID</th>
                <th>Game Title</th>
                <th>Game Summary</th>
                <th>Release Date</th>
                <th>Company</th>
                <th>Genre</th>
                <th>Platforms</th>
                <th></th>
                <th></th>
            </tr>
            {{#each data}}

            <tr data-value="{{'Game ID'}}">
                <td>{{"Game ID"}}</td>
                <td>{{"Game Title"}}</td>
                <td>{{"Game Summary"}}</td>
                <td>{{"Release Date"}}</td>
                <td>{{"Company"}}</td>
                <td>{{"Genre"}}</td>
                <td>{{"Platforms"}}</td>
                <td>
                    <button id="editPlatformBtn" onclick="showEdit()">
                        <i class="fa-solid fa-pen-to-square" id="editIcon"></i>
                    </button>
                </td>
                <td>
                    <button id="deletePlatformBtn" onclick="showDelete()">
                        <i class="fa-solid fa-xmark" id="deleteIcon"></i>
                    </button>    
                </td>
            </tr>

            {{/each}}
        </table>

    </div>
    <br>

   <div id="container">
    <form id="addGame">
        <h3>Add a New Game </h3>
          <fieldset class="fields">
            <label> Game: </label> <input type="text" id="game-name">
            <label> Game Summary: </label> <input type="text" id="game-summary">
            <label> Release Date: </label> <input type="date" id="release-date">
            <label> Company Name: </label><select name="company" id="company-select">
                <option value="">Select a company</option>
                {{#each companies}}
                <option value="{{company_id}}">{{company_name}}</option>
                {{/each}}
              </select>
            <label> Genre: </label> <select name="genre" id="genre-select">
                <option value="">Select a genre</option>
                {{#each genres}}
                <option value="{{genre_id}}">{{genre_name}}</option>
                {{/each}}
              </select>
              <label> Platform: </label> <select name="platform" id="platform-select" multiple>
                {{#each platforms}}
                <option value="{{platform_id}}">{{platform_name}}</option>
                {{/each}}
              </select>
      </fieldset>
      <br>
      <div id="formBtns">
        <button id="addgameBtn"> Add Game</button>
        <button id="cancelBtn">Cancel</button>
      </div>	
	</form> 
    
    <form id="editGame">
        <h3>Edit Game </h3>
          <fieldset class="fields">
            <label> Game: </label> <input type="text" id="game-name">
            <label> Game Summary: </label> <input type="text" id="game-summary">
            <label> Release Date: </label> <input type="date" id="release-date">
            <label> Company Name: </label> <input type="text" id="game-company">
            <label> Genre: </label> <input type="text" id="genre-name">
            <label> Platform: </label> <select name="platform" id="platform-select" multiple>
                <option value="Switch">Switch</option>
                <option value="Pc">Pc</option>
                <option value="Playstation 4">Playstation 4</option>
                <option value="Playstation 5">Playstation 5</option>
                <option value="Xbox one">Xbox one</option>
                <option value="Xbox series X|S">Xbox series X|S</option>
                <option value="Other">Other</option>
              </select>
      </fieldset>
      <br>
      <div id="formBtns">
        <button id="editgameBtn"> Edit Game</button>
        <button id="cancelBtn">Cancel</button>
      </div>	
	</form> 
    
    <form id="deleteGame">
        <h3>Delete Game </h3>
          <fieldset class="fields">
            <h3>Are you sure you want to delete this Game?</h3>
            <label> Game ID: </label> <input type="number" id="game-id">
            <label> Game: </label> <input type="text" id="game-name">
      </fieldset>
      <br>
      <div id="formBtns">
        <button id="delGameBtn"> Delete Game</button>
        <button id="cancelBtn">Cancel</button>
      </div>	
	</form> 

   </div>
<script>
    function showEdit(){
        document.getElementById("editGame").style.display = "block";
    }
    function showDelete(){
        document.getElementById("deleteGame").style.display = "block";
    }
    function addGame(){
        document.getElementById("addGame").style.display = "block";
    }
</script>
</body>
</html>